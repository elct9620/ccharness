{
  "commit": {
    "maxFiles": 5,
    "maxLines": 100
  },
  "review": {
    "blockMode": true
  },
  "rubrics": [
    {
      "name": "Testing Quality",
      "pattern": "\\.test\\.(js|ts)$",
      "path": "docs/rubrics/testing.md"
    },
    {
      "name": "Testing Steps",
      "pattern": "tests\/steps\/.*\\.(js|ts)$",
      "path": "docs/rubrics/steps.md"
    },
    {
      "name": "Domain Model",
      "pattern": "(entities|usecases)\/.*\\.(js|ts)$",
      "path": "docs/rubrics/domain_model.md"
    },
    {
      "name": "Use Case",
      "pattern": "usecases\/.*\\.(js|ts)$",
      "path": "docs/rubrics/usecase.md"
    },
    {
      "name": "Entity",
      "pattern": "entities\/.*\\.(js|ts)$",
      "path": "docs/rubrics/entity.md"
    },
    {
      "name": "Service",
      "pattern": "services\/.*\\.(js|ts)$",
      "path": "docs/rubrics/service.md"
    },
    {
      "name": "Handler",
      "pattern": "handlers\/.*\\.(js|ts)$",
      "path": "docs/rubrics/handler.md"
    },
    {
      "name": "Presenter",
      "pattern": "presenters\/.*\\.(js|ts)$",
      "path": "docs/rubrics/presenter.md"
    },
    {
      "name": "General Code Quality",
      "pattern": "src\/.*\\.(js|ts)$",
      "path": "docs/rubrics/general.md"
    }
  ]
}
